
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridViewBestellArtikel";
        settings.CallbackRouteValues = new { Controller = "Bestellungs", Action = "GridViewPartialBestellArtikel" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Bestellungs", Action = "GridViewPartialBestellArtikelAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Bestellungs", Action = "GridViewPartialBestellArtikelUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Bestellungs", Action = "GridViewPartialBestellArtikelDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.SettingsSearchPanel.CustomEditorName = "tbSearchBestellArtikel";
        settings.Settings.ShowTitlePanel = true;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.SetTitlePanelTemplateContent(content =>
        {
            Html.DevExpress().Label(label =>
            {

                label.Text = "BestellArtikels";
                label.Style["font-weight"] = "bold";

            }).Render();

        });

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "Oid";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

        settings.Columns.Add(c =>
        {
            c.FieldName = "ArtikelNr";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Bezeichnung";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Stueckzahl";
        });

        settings.Columns.Add(c =>
        {
            c.FieldName = "Bestellung.Oid";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Artikel.Bezeichnung";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "mboid";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "AuftragsNrKW";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "BestellKunden.KDNr";
        });

    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()

