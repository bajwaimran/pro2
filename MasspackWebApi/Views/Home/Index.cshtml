@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    @Html.DevExpress().Menu( menu =>
    {
    menu.Name = "leggedInMenu";
    menu.Items.Add(item =>
    {
       item.Name = "client";
       item.Text = "Client Portal";
       item.NavigateUrl = "/Clients/Index";
    });

    }).GetHtml()
}
else
{
    @Html.DevExpress().Menu( menu =>
    {
    menu.Name = "mainMenu";
    menu.Items.Add(item =>
    {
       item.Name = "Login";
       item.Text = "Client Login";
       item.NavigateUrl = "/Account/Login";
    });
    menu.Items.Add(item =>
    {
       item.Name = "Register";
       item.Text = "Register";
       item.NavigateUrl = "/Account/Register";
    });
    }).GetHtml()
}



